@model TaskEntity

<h1>Editar Tarea</h1>

<form asp-controller="Task" asp-action="EditTask" asp-route-id="@Model.Id" method="put" onsubmit="return validate()">
    <div class="form-group">
        <label asp-for="TaskName"></label>
        <input asp-for="TaskName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save Tarea</button>
</form>

@section scripts {
    <script src="~/js/addTask.js"></script>
}